<body>
    <div id="game-container">
        <div id="game-area">
            <div class="pipe" id="pipe1"></div>
            <div class="pipe" id="pipe2"></div>
            <div class="pipe" id="pipe3"></div>
            <div class="pipe" id="pipe4"></div>
            
            <div class="pipe-end" id="pipe-end1"></div>
            <div class="pipe-end" id="pipe-end2"></div>
            <div class="pipe-end" id="pipe-end3"></div>
            <div class="pipe-end" id="pipe-end4"></div>
            
            <div id="troll"></div>
            <div id="basket"></div>
            
            <div id="score-panel">
                <h2 style="margin: 0; color: #5D4037;">Веселый Троль</h2>
                <p style="margin: 5px 0;">Правильные слова: <span id="correct-count" style="font-weight: bold; color: #2E7D32;">0</span></p>
                <p style="margin: 5px 0;">Ошибки: <span id="error-count" style="font-weight: bold; color: #C62828;">0</span>/5</p>
            </div>
            
            <div id="game-over">
                <h1>Троль лопнул!</h1>
                <p style="font-size: 24px; color: white;">Правильных ответов: <span id="final-score" style="font-weight: bold; color: #FFEB3B;">0</span></p>
                <button id="restart-btn">Играть снова</button>
            </div>
        </div>
    </div>

    <script>
        // Конфигурация игры
        const config = {
            wordSpeed: 1.5,
            spawnInterval: 1000, // 1 секунда между словами
            correctWords: ['Радость', 'Смех', 'Улыбка', 'Дружба', 'Веселье', 'Праздник', 'Игра', 'Танцы', 'Песня', 'Счастье'],
            incorrectWords: ['Грусть', 'Злость', 'Скука', 'Обида', 'Ссора', 'Плач', 'Крик', 'Боль', 'Страх', 'Тоска']
        };
        
        // Состояние игры
        const gameState = {
            correctCount: 0,
            errorCount: 0,
            isGameOver: false,
            activeWords: [],
            wordInterval: null,
            moveInterval: null,
            lastSpawnTime: 0,
            canSpawn: true
        };
        
        // Элементы DOM
        const gameArea = document.getElementById('game-area');
        const troll = document.getElementById('troll');
        const basket = document.getElementById('basket');
        const correctCountEl = document.getElementById('correct-count');
        const errorCountEl = document.getElementById('error-count');
        const gameOverScreen = document.getElementById('game-over');
        const finalScoreEl = document.getElementById('final-score');
        const restartBtn = document.getElementById('restart-btn');
        
        // Размеры игровой области
        const gameWidth = gameArea.offsetWidth;
        const gameHeight = gameArea.offsetHeight;
        
        // Позиции концов труб
        const pipeEnds = [
            { x: 160, y: 160 },    // верхняя левая
            { x: gameWidth - 160, y: 160 },  // верхняя правая
            { x: 160, y: gameHeight - 160 }, // нижняя левая
            { x: gameWidth - 160, y: gameHeight - 160 }  // нижняя правая
        ];
        
        // Направления движения слов по трубам
        const pipeDirections = [
            { dx: 1, dy: 1 },    // из верхней левой
            { dx: -1, dy: 1 },    // из верхней правой
            { dx: 1, dy: -1 },    // из нижней левой
            { dx: -1, dy: -1 }    // из нижней правой
        ];
        
        // Инициализация игры
        function initGame() {
            gameState.correctCount = 0;
            gameState.errorCount = 0;
            gameState.isGameOver = false;
            gameState.activeWords = [];
            gameState.lastSpawnTime = 0;
            gameState.canSpawn = true;
            
            correctCountEl.textContent = '0';
            errorCountEl.textContent = '0';
            
            // Сброс размера троля
            troll.style.transform = 'translateX(-50%) scale(1)';
            
            // Очистка игрового поля
            document.querySelectorAll('.word, .firework').forEach(el => el.remove());
            
            // Скрытие экрана Game Over
            gameOverScreen.style.display = 'none';
            
            // Запуск генерации слов
            if (gameState.wordInterval) clearInterval(gameState.wordInterval);
            gameState.wordInterval = setInterval(trySpawnWord, 100);
            
            // Запуск движения слов
            if (gameState.moveInterval) clearInterval(gameState.moveInterval);
            gameState.moveInterval = setInterval(moveWords, 20);
        }
        
        // Попытка создать новое слово с проверкой времени
        function trySpawnWord() {
            const now = Date.now();
            if (now - gameState.lastSpawnTime >= config.spawnInterval && gameState.canSpawn) {
                spawnWord();
                gameState.lastSpawnTime = now;
                gameState.canSpawn = false;
                setTimeout(() => gameState.canSpawn = true, config.spawnInterval);
            }
        }
        
        // Генерация слова
        function spawnWord() {
            if (gameState.isGameOver) return;
            
            // Выбор случайной трубы
            const pipeIndex = Math.floor(Math.random() * pipeEnds.length);
            const pipeEnd = pipeEnds[pipeIndex];
            const direction = pipeDirections[pipeIndex];
            
            // Определение, будет ли слово правильным
            const isCorrect = Math.random() > 0.4;
            const wordList = isCorrect ? config.correctWords : config.incorrectWords;
            const wordText = wordList[Math.floor(Math.random() * wordList.length)];
            
            // Создание элемента слова
            const word = document.createElement('div');
            word.className = `word ${isCorrect ? 'correct' : 'incorrect'}`;
            word.textContent = wordText;
            word.style.left = `${pipeEnd.x}px`;
            word.style.top = `${pipeEnd.y}px`;
            
            // Сохранение данных слова
            word.dataset.isCorrect = isCorrect;
            word.dataset.dx = direction.dx;
            word.dataset.dy = direction.dy;
            word.dataset.speed = config.wordSpeed;
            
            if (!isCorrect) {
                word.addEventListener('click', () => handleIncorrectWordClick(word));
            }
            
            gameArea.appendChild(word);
            gameState.activeWords.push(word);
        }
        
        // Обработка клика по неправильному слову
        function handleIncorrectWordClick(word) {
            if (gameState.isGameOver) return;
            
            gameState.errorCount++;
            errorCountEl.textContent = gameState.errorCount;
            
            // Уменьшение троля
            const currentScale = parseFloat(troll.style.transform.match(/scale\(([^)]+)\)/)[1]) || 1;
            troll.style.transform = `translateX(-50%) scale(${currentScale * 0.9})`;
            
            // Удаление слова
            removeWord(word);
            
            // Проверка на окончание игры
            if (gameState.errorCount >= 5) {
                gameOver();
            }
        }
        
        // Движение слов по трубам
        function moveWords() {
            const basketRect = basket.getBoundingClientRect();
            const gameAreaRect = gameArea.getBoundingClientRect();
            
            gameState.activeWords.forEach(word => {
                const dx = parseFloat(word.dataset.dx);
                const dy = parseFloat(word.dataset.dy);
                const speed = parseFloat(word.dataset.speed);
                const isCorrect = word.dataset.isCorrect === 'true';
                
                const currentLeft = parseFloat(word.style.left);
                const currentTop = parseFloat(word.style.top);
                
                // Новая позиция
                const newLeft = currentLeft + dx * speed;
                const newTop = currentTop + dy * speed;
                
                word.style.left = `${newLeft}px`;
                word.style.top = `${newTop}px`;
                
                // Проверка на выход за границы
                if (newLeft < -50 || newLeft > gameWidth + 50 || newTop < -50 || newTop > gameHeight + 50) {
                    removeWord(word);
                    return;
                }
                
                // Для правильных слов - проверка столкновения с корзиной
                if (isCorrect) {
                    const wordRect = word.getBoundingClientRect();
                    
                    if (wordRect.bottom >= basketRect.top && 
                        wordRect.right >= basketRect.left && 
                        wordRect.left <= basketRect.right) {
                        catchWord(word);
                    }
                }
            });
        }
        
        // Ловля правильного слова
        function catchWord(word) {
            gameState.correctCount++;
            correctCountEl.textContent = gameState.correctCount;
            createFirework(word);
            removeWord(word);
        }
        
        // Удаление слова
        function removeWord(word) {
            const index = gameState.activeWords.indexOf(word);
            if (index !== -1) {
                gameState.activeWords.splice(index, 1);
            }
            word.remove();
        }
        
        // Создание фейерверка
        function createFirework(word) {
            const wordRect = word.getBoundingClientRect();
            const gameAreaRect = gameArea.getBoundingClientRect();
            
            const x = wordRect.left - gameAreaRect.left + wordRect.width / 2;
            const y = wordRect.top - gameAreaRect.top + wordRect.height / 2;
            
            for (let i = 0; i < 30; i++) {
                setTimeout(() => {
                    const firework = document.createElement('div');
                    firework.className = 'firework';
                    firework.style.left = `${x}px`;
                    firework.style.top = `${y}px`;
                    
                    // Случайный цвет
                    const colors = ['#FF5722', '#FFEB3B', '#4CAF50', '#2196F3', '#9C27B0'];
                    const color = colors[Math.floor(Math.random() * colors.length)];
                    firework.style.backgroundColor = color;
                    
                    // Случайное направление
                    const angle = Math.random() * Math.PI * 2;
                    const distance = 5 + Math.random() * 10;
                    
                    gameArea.appendChild(firework);
                    
                    // Анимация разлета
                    let frame = 0;
                    const animate = () => {
                        frame++;
                        const moveX = Math.cos(angle) * distance * frame / 10;
                        const moveY = Math.sin(angle) * distance * frame / 10;
                        
                        firework.style.left = `${x + moveX}px`;
                        firework.style.top = `${y + moveY}px`;
                        firework.style.opacity = 1 - frame / 20;
                        
                        if (frame < 20) {
                            requestAnimationFrame(animate);
                        } else {
                            firework.remove();
                        }
                    };
                    
                    animate();
                }, i * 20);
            }
        }
        
        // Конец игры
        function gameOver() {
            gameState.isGameOver = true;
            clearInterval(gameState.wordInterval);
            clearInterval(gameState.moveInterval);
            
            finalScoreEl.textContent = gameState.correctCount;
            gameOverScreen.style.display = 'flex';
            
            // Анимация "лопнувшего" троля
            troll.style.transform = 'translateX(-50%) scale(1.5)';
            setTimeout(() => {
                troll.style.transform = 'translateX(-50%) scale(0)';
            }, 500);
        }
        
        // Управление тролем мышью
        gameArea.addEventListener('mousemove', (e) => {
            if (gameState.isGameOver) return;
            
            const rect = gameArea.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const newLeft = Math.max(troll.offsetWidth / 2, Math.min(gameWidth - troll.offsetWidth / 2, x));
            
            troll.style.left = `${newLeft}px`;
            basket.style.left = `${newLeft}px`;
        });
        
        // Кнопка перезапуска
        restartBtn.addEventListener('click', initGame);
        
        // Начало игры
        initGame();
    </script>
</body>
</html>
